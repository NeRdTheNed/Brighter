  "authors": [
    "e00E"
  ],
  "contact": {
    "sources": "https://github.com/e00E/Brighter"
  },

  "license": "GPL-3.0-or-later",
  "icon": "assets/brighter/icon.png",

  "environment": "client",
  "entrypoints": {
    "client": [
      "brighter.Brighter"
    ]
  },

  "depends": {
    "fabricloader": ">=0.4.0",
    "fabric": "*"
  }
}
